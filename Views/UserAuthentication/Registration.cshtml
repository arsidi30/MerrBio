@model FarmIt.Models.DTO.Registration
@{
}
<form class="w-40" asp-action="Registration" method="post">
    <h2 class="pb-10">Registration</h2>
    <div class="input-container">
        <label asp-for="Username" class="w-40">Username</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="name" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="input-container">
        <label asp-for="Email" class="w-40">Email</label>
        <input type="email" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="input-container">
        <label asp-for="Password" class="w-40">Password</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input-container">
        <label asp-for="PasswordConfirmation" class="w-40">PasswordConfirmation</label>
        <input type="passwordConfirmation" class="input" asp-for="PasswordConfirmation">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirmation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role">Register as:</label>
        <select asp-for="Role" class="form-control">
            <option value="Konsumator">Konsumator</option>
            <option value="Fermer">Fermer</option>
            
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Role"></span>
    </div>



    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Register</button>
        @*<a class="btn btn-sec" href="#">Add more</a>*@
    </div>

</form>
