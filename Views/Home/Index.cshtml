<style>
    
    .welcome-section {
        position: relative;
        width: 100%;
        height: 100vh;
        
        
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
    }

       

    .welcome-section h1 {
        font-size: 4rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.5);
    }

    .welcome-section .btn-group {
        display: flex;
        gap: 20px;
    }

    .welcome-section .btn {
        padding: 10px 20px;
        font-size: 1.2rem;
        border: none;
        border-radius: 5px;
            background-color: rgb(43, 61, 42);
        color: white;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .welcome-section .btn:hover {
                background-color: rgb(94, 123, 92);
    }
</style>

